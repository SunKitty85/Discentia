<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.moltox.discentia.QandA_ActivityFragmentFrontside"
    tools:showIn="@layout/activity_qanda_activity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:id="@+id/tv_qanda_card_subject"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hier Subject"
            android:textAppearance="@style/TextAppearance.AppCompat.Small"/>

        <TextView
            android:id="@+id/tv_qanda_card_category"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hier Kategorie"
            android:textAppearance="@style/TextAppearance.AppCompat.Small"/>



        <TextView
            android:id="@+id/tv_qanda_card_question"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/tv_qanda_frag_card_question"
            android:textAlignment="center" />


        <TextView
            android:id="@+id/tv_qanda_card_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/tv_qanda_frag_card_id"
            android:textAlignment="center" />


        <Button
            android:id="@+id/btn_newCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/button_new_card" />





    </LinearLayout>
</android.support.constraint.ConstraintLayout>
